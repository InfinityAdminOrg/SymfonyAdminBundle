{% extends '@InfinityBundle/base.html.twig' %}

{% block body %}
    <div>
        <form hx-post="" >
            <div>
                <div>
                    <label>Identifier</label>
                </div>
                <div>
                    <input type="text" name="_username" required />
                </div>
            </div>
            <div>
                <div>
                    <label>Password</label>
                </div>
                <div>
                    <input type="password" name="_password" required />
                </div>
            </div>

            <input type="hidden" name="_target_path" value="{{ url('infinity.clear.opa') }}" />

            <button type="submit">
                Login
            </button>
        </form>
    </div>
{% endblock %}